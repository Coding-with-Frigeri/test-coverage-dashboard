{
    "compilerOptions": {
        "lib": ["ES2022"],
        "target": "es2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "CommonJS",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "composite": true
    },
    "references": [
        {
            "path": "./tsconfig.build.json"
        }
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}